{
  "name": "fragments",
  "private": true,
  "version": "0.4.0",
  "description": "Fragments back-end API",
  "scripts": {
    "build": "tsc",
    "test": "jest -c jest.config.js --runInBand --",
    "test:watch": "jest -c jest.config.js --runInBand --watch --",
    "test:integration": "hurl --test --glob \"tests/integration/**/*.hurl\"",
    "coverage": "jest -c jest.config.js --runInBand --coverage",
    "lint": "eslint \"./src/**/*.ts\" \"tests/**/*.ts\"",
    "start": "npx ts-node src/index.ts",
    "dev": "LOG_LEVEL=debug nodemon ./src/index.ts --watch src",
    "debug": "LOG_LEVEL=debug nodemon --inspect=0.0.0.0:9229 --exec node -r ts-node/register ./src/index.ts --watch src",
    "format": "prettier --write \"**/*.{js,ts,jsx,tsx,html,css,json,md}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/preetDev004/Fragments"
  },
  "author": "Preet",
  "license": "UNLICENSED",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@orangeopensource/hurl": "^6.1.0",
    "@types/content-type": "^1.1.8",
    "@types/jest": "^29.5.14",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.10.5",
    "@types/papaparse": "^5.3.15",
    "@types/passport": "^1.0.17",
    "@types/passport-http": "^0.3.11",
    "@types/passport-http-bearer": "^1.0.41",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.1"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.775.0",
    "@aws-sdk/client-s3": "^3.772.0",
    "@aws-sdk/lib-dynamodb": "^3.775.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/helmet": "^0.0.48",
    "@types/http-auth": "^4.1.4",
    "@types/stoppable": "^1.1.3",
    "@types/supertest": "^6.0.2",
    "aws-jwt-verify": "^5.0.0",
    "compression": "^1.7.5",
    "content-type": "^1.0.5",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "http-auth": "^4.2.0",
    "http-auth-passport": "^1.0.7",
    "markdown-it": "^14.1.0",
    "papaparse": "^5.5.2",
    "passport": "^0.7.0",
    "passport-http-bearer": "^1.0.1",
    "pino": "^9.6.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^13.0.0",
    "stoppable": "^1.1.0"
  }
}
